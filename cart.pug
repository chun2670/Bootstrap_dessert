                      br
                      span.h6 NT$ 450
                    //- 數量
                    .cart_amount.ml-auto
                      .input-group.input-group-lg.d-flex
                        .input-group-prepend
                          button.btn.btn-outline-main_lighter.text-main_light.cart_amount_btn(type='button') -
                        input.form-control.flex-fill.text-center(type='text', value='2', aria-label="Amount", aria-describedby='basic-addon2')
                        .input-group-append
                          button.btn.btn-outline-main_lighter.text-main_light.cart_amount_btn(type='button') +
                //- 價錢+垃圾筒
                .price.py-md-3.ml-md-2.mt-md-0.mt-1.d-flex.align-items-center.pt-md-0.py-1
