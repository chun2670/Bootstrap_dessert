    // navbar
    .container.p-0
      nav.navbar.navbar-expand-md.navbar-light.px-0
        // 手機版設定
        .d-flex.justify-content-between
          button.navbar-toggler.d-md-none.ml-1.border-0(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
          a.navbar-brand.d-md-none.text-center.m-0(href='#')
            img.w-75(src='images/logotype-sm-dark.svg', alt='')
          a.nav-link.text-main.d-md-none.mr-1(href='../cart.html')
            i.fas.fa-shopping-cart
        // 電腦版設定
        a.navbar-brand.d-md-block.d-none(href='#')
          img(src='images/logo-all-dark.svg', height='40', alt='')
        button.navbar-toggler.d-none(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse.p-md-0.p-3
          ul.navbar-nav.my-auto.ml-auto.ml-2.mt-2
            li.nav-item.active
              a.nav-link.text-main(href='../index.html')
                | 首頁 
                span.sr-only (current)
            li.nav-item
              a.nav-link.text-main(href='../product.html') 甜點
            li.nav-item
              a.nav-link.text-main(href='../login.html') 登入
            li.nav-item.d-md-block.d-none
              a.nav-link.text-main(href='../cart.html')
                i.fas.fa-shopping-cart

    //- content
    .my-md-3.mb-md-6.my-0.text-main
      .container
        .row
          .col-md-8.px-0
            .bg-main_lighter.p-2.text-center
              h4.mb-0 您的購物車
            div.mb-0.py-md-3.px-0.mx-md-0.mx-2.my-md-0.my-1.border-bottom
              .d-md-flex
                //- 圖+品項+數量
                .d-flex.flex-grow-1.align-items-center
                  //- 圖
                  div.mr-md-2.mr-1
                    .cart_row_img.bg-cover(style='background-image: url(https://bit.ly/2NcDVuB)')
                  //- 品項+數量
                  .cart_row_product.d-md-flex.flex-grow-1
                    //- 品項
                    .cart_item.mr-md-4.flex-grow-1.mb-md-0.mb-1
